<%- include('./partials/header.ejs', {name: movies[0].genre}) %>

<h1 class="show-genre-header">Movies By Genre</h1>
<% for(let i = 0; i < movies.length; i++) { %>
    <a href="movies/<%= movies[i]._id %>">
        <h1> <%= movies[i].title %></h1>
    </a>
        <h3><span>Director:</span> <%= movies[i].director %></h3>
        <h3><span>Runtime:</span> <%= movies[i].runtime %> minutes</h3>
        <h3><span>Rotten Tomatoes:</span> <%= movies[i].rottenTomatoes %>%</h3>
        <h3><span>Release Date:</span> <%= movies[i].releaseDate %></h3>
        <h3><span>Genre:</span> <%= movies[i].genre %></h3>
<% } %>

<%- include('./partials/footer.ejs') %>